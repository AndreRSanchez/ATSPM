@model MOE.Common.Models.ViewModel.RouteEdit.ApproachesForRouteViewModel

<div class="col-md-6">
    Primary Approaches
    <table class="table">
        <tr>
            <th>
                Signal ID
            </th>
            <th>
                Direction
            </th>
            <th>
                Phase
            </th>
            <th>
                Is Overlap
            </th>
        </tr>

        @foreach (var item in Model.PrimaryApproaches) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RouteSignal.SignalId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direction.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phase)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsOverlap)
            </td>
        </tr>
        }
    </table>
</div>
<div class="col-md-6">
    Opposing Approaches
    <table class="table">
        <tr>
            <th>
                Signal ID
            </th>
            <th>
                Direction
            </th>
            <th>
                Phase
            </th>
            <th>
                Is Overlap
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model.OpposingApproaches)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RouteSignal.SignalId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Direction.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phase)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsOverlap)
                </td>
            </tr>
        }
    </table>
</div>